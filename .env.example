# LM Studio Copilot Proxy Configuration

# =============================================================================
# Core Configuration (Docker & Native)
# =============================================================================

# LM Studio base URL 
# For Docker: use host.docker.internal to access host services
# For native: use localhost
LMSTUDIO_URL=http://host.docker.internal:1234

# API ports
LITELLM_PORT=4000
OLLAMA_PORT=11434

# API key (can be any string, 'dummy' works fine)
API_KEY=dummy

# =============================================================================
# Advanced Configuration
# =============================================================================

# Logging
LOG_LEVEL=INFO

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Graceful shutdown timeout (seconds)
GRACEFUL_SHUTDOWN_TIMEOUT=10

# Model refresh interval (seconds)
MODEL_REFRESH_INTERVAL=300

# =============================================================================
# Development Overrides (Docker only)
# =============================================================================

# Enable development mode
DEV_MODE=false

# Enable hot-reload (development)
HOT_RELOAD=false

# Enable debug logging
DEBUG_LOGGING=false

# =============================================================================
# Legacy Configuration (Native mode only)
# =============================================================================

# Port for the proxy server (native mode, deprecated for Docker)
PORT=11434

# LM Studio base URL (native mode, use LMSTUDIO_URL instead)
LMSTUDIO_BASE_URL=http://localhost:1234